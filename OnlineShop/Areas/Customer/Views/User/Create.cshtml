@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Create";
}
<head>
    <style>
        body {
            background-color: #fcf8ef;
        }
    </style>
</head>
<br />

<h1 class="text-info">Register</h1> 
    <section>
    <form asp-action="Create" method="post" id="user-form" enctype="multipart/form-data">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <h3>@ViewBag.message</h3>
            <hr />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="PasswordHash" class="form-control" type="password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>

            <div class="form-group" style="left:20px">
                <button type="submit" class="btn btn-info">Register</button>
                @*<a asp-action="Index" class="btn btn-success">Back to List</a>*@
            </div>
        </div>
    </form>
</section>
    

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }

            });
        });
    </script>
}